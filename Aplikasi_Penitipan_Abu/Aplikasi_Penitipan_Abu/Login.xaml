<Window x:Class="Aplikasi_Penitipan_Abu.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikasi_Penitipan_Abu"
        mc:Ignorable="d"
        Title="Penitipan Abu" Height="720" Width="1080"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Login Penerimaan Abu Adijasa" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" TextAlignment="Center" FontSize="24" TextWrapping="Wrap"/>
            <StackPanel Grid.Row="1" >
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 2">
                    <TextBlock Text="Username : " DockPanel.Dock="Left" Width="80" FontSize="18" MinWidth="100"/>
                    <TextBox  DockPanel.Dock="Left" x:Name="txt_username" FontSize="18" MinWidth="200"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0 2">
                    <TextBlock Text="Password : " DockPanel.Dock="Left"  Width="80" FontSize="18" MinWidth="100"></TextBlock>
                    <PasswordBox DockPanel.Dock="Left" x:Name="txt_password" FontSize="18" MinWidth="200"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0 2">
                    <Button Click="Button_Click" IsDefault="True" FontSize="18" MinWidth="200">Login</Button>
                </DockPanel>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
