<Page x:Class="Aplikasi_Penitipan_Abu.Master.MasterKategori"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aplikasi_Penitipan_Abu.Master"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MasterKategori">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="6 0">
            <TextBlock Text="Master Kategori" FontSize="16" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" DockPanel.Dock="Top" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" DockPanel.Dock="Top" MaxHeight="16" Margin=" 0 0 6 0">
                <TextBlock Text="Filter Kategori" Margin="0 0 6 0"/>
                <Image Source="search_image.png" ></Image>
                <TextBox x:Name="search_box" MinWidth="120" TextChanged="search_box_TextChanged"/>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="67*"/>
                    <ColumnDefinition Width="128*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical">
                    <Border  BorderBrush="Gray" BorderThickness="2" Margin="3">
                        <StackPanel Orientation="Vertical" Margin="6">
                            <TextBlock Text="Tambah Kategori" Margin="2" FontSize="14" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 2">
                                <TextBlock Text="Nama Kategori" MinWidth="120"/>
                                <TextBox MinWidth="120" Name="NamaKategoriAdd"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 2">
                                <TextBlock Text="Harga" MinWidth="120"/>
                                <TextBlock Text="Rp. "/>
                                <TextBox MinWidth="100" Name="HargaKategoriAdd" />
                            </StackPanel>
                            <Button Content="Tambah" HorizontalAlignment="Right" Margin="6 0" Name="btnTambah" Click="btnTambah_Click"/>
                        </StackPanel>
                    </Border>
                    <Border  BorderBrush="Gray" BorderThickness="2" Margin="3">
                        <StackPanel Orientation="Vertical" Margin="6">
                            <TextBlock Text="Kategori Yang Dipilih" Margin="2" FontSize="14" FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 2">
                                <TextBlock Text="ID" MinWidth="120"/>
                                <TextBlock Text="-" MinWidth="120" Name="txt_kategori_id"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 2">
                                <TextBlock Text="Nama Kategori" MinWidth="120"/>
                                <TextBox MinWidth="120" Name="NamaKategoriEdit"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0 2">
                                <TextBlock Text="Harga" MinWidth="120"/>
                                <TextBlock Text="Rp. "/>
                                <TextBox MinWidth="100" Name="HargaKategoriEdit" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Edit" Margin="6 0" Padding="4 0" Name="btnEdit" Click="btnEdit_Click"/>
                                <Button Content="Delete" Margin="6 0" Padding="4 0" Name="btnDelete" Click="btnDelete_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <DataGrid Name="dtGrid" Grid.Column="1" Margin="6 3" IsReadOnly="True" MouseDoubleClick="dtGrid_MouseDoubleClick" >

                </DataGrid>
            </Grid>
        </DockPanel>
    </Grid>
</Page>
