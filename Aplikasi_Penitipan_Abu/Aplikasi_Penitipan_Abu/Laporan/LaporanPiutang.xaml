<Page x:Class="Aplikasi_Penitipan_Abu.Laporan.LaporanPiutang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aplikasi_Penitipan_Abu.Laporan"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LaporanPiutang">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="6 0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" MaxHeight="30">
                <TextBlock Text="Tanggal" Margin="0 4 4 0"/>
                <DatePicker HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Text="s/d" Margin="4 4 4 0"/>
                <DatePicker HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Button Content="Filter" VerticalAlignment="Center" Width="75" Margin="4 0 0 0"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
